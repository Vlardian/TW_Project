@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">
<head>
    <title>EShop</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.png" />
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/bootstrap/css")
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/fontawesome/css")
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/material-design/css")
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/icon-font/css")
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/animate/css")
    <!--===============================================================================================-->
    @Styles.Render("/bundles/hamburger/css")
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/animsition/css")
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/select2/css")
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/perfect-scrollbar/css")
    <!--===============================================================================================-->
    @Styles.Render("~/bundles/main/css")
    @Styles.Render("~/bundles/util/css")
    <!--===============================================================================================-->
</head>
<body class="animsition">
    <!-- Header -->
    <header class="header-v4">
        @Html.Partial("_Header")
    </header>

    @RenderBody()

    <footer class="bg3 p-t-75 p-b-32">
        @Html.Partial("_Footer")
    </footer>

    <!-- Back to top -->
    <div class="btn-back-to-top" id="myBtn">
        <span class="symbol-btn-back-to-top">
            <i class="zmdi zmdi-chevron-up"></i>
        </span>
    </div>
    <!--===============================================================================================-->
    @Scripts.Render("~/bundles/jquery/js")
    <!--===============================================================================================-->
    @Scripts.Render("~/bundles/animsition/js")
    <!--===============================================================================================-->
    @Scripts.Render("~/bundles/popper/js")
    @Scripts.Render("~/bundles/bootstrap/js")
    <!--===============================================================================================-->
    @Scripts.Render("~/bundles/select2/js")
    <script>
        $(".js-select2").each(function () {
            $(this).select2({
                minimumResultsForSearch: 20,
                dropdownParent: $(this).next('.dropDownSelect2')
            });
        })</script>
    <!--===============================================================================================-->
    @Scripts.Render("~/bundles/magnific-popup/js")
    <!--===============================================================================================-->
    @Scripts.Render("~/bundles/perfect-scrollbar/js")
    <script>
        $('.js-pscroll').each(function () {
            $(this).css('position', 'relative');
            $(this).css('overflow', 'hidden');
            var ps = new PerfectScrollbar(this, {
                wheelSpeed: 1,
                scrollingThreshold: 1000,
                wheelPropagation: false,
            });

            $(window).on('resize', function () {
                ps.update();
            })
        });</script>
    <!--===============================================================================================-->
    @Scripts.Render("~/bundles/main/js")
</body>
</html>